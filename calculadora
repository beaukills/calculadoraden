#include <stdio.h>
#include <stdlib.h>

int main(){

  	int i, n, A = 0;

    do{
  	printf("Calculadora de N\n\n");
    printf("inserir um valor de inteiros: ");
    scanf("%d", &n);
    
    } while (n < 1);
    for(i = 1; i <= n; i++)
    A = A + i;
    
    printf("Resultado %d: %d\n\n", n, A);
}
